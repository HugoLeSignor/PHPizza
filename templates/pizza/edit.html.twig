{% extends 'base.html.twig' %}

{% block title %}Modifier {{ pizza.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container container-edit">
        <div class="card">
            <h1>
                <span>‚úèÔ∏è</span>
                Modifier votre pizza
            </h1>

            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.specialIngredient) }}
                    {{ form_widget(form.specialIngredient) }}
                    {{ form_errors(form.specialIngredient) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.doughType) }}
                    {{ form_widget(form.doughType) }}
                    {{ form_errors(form.doughType) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.ingredients) }}
                    <div class="ingredients-grid">
                        {% for child in form.ingredients %}
                            <div class="ingredient-item">
                                {{ form_widget(child) }}
                                {{ form_label(child) }}
                            </div>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.ingredients) }}
                </div>

                <div class="button-group">
                    <button type="submit" class="btn btn-primary">
                        üíæ Enregistrer
                    </button>
                    <a href="{{ path('app_pizza_index') }}" class="btn btn-secondary">
                        ‚ùå Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
